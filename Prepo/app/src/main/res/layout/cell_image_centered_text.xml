<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_gravity="start|center|top"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_gravity="start|center|top"
        android:scaleType="centerCrop"
        android:src="@drawable/overlay_normal" />

    <TextView
        android:id="@+id/centered_text_view"
        style="@style/WhiteTextBlackShadowTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawablePadding="20.0dip"
        android:gravity="center"
        android:lineSpacingMultiplier="2.0"
        android:textSize="20.0sp" />

    <TextView
        android:id="@+id/cost_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/centered_text_view"
        android:layout_centerInParent="true"
        android:drawablePadding="10.0dip"
        android:lineSpacingMultiplier="2.0"
        android:textColor="@color/reserve_gold"
        android:textSize="25.0sp"
        android:textStyle="bold"
        android:visibility="gone" />
</RelativeLayout>